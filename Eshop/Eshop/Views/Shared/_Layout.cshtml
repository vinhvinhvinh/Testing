        <link href="~/css/style.css" rel="stylesheet">
        <link href="~/css/responsive.css" rel="stylesheet">
        <style>
            .user-area {
                background-color: whitesmoke;
                border-radius: 40px;
                display: flex;
                flex-wrap: nowrap;
                justify-content: space-evenly;
                align-items: center;
                width: 160px;
                height: 40px;
                transition: all 0.3s;
                color: red;
            }

                .user-area:hover {
                    border: solid hotpink 2px;
                }

                .user-area .avt-area {
                    transition: all 0.3s;
                    width: 35px;
                    height: 35px;
                    border-radius: 50%;
                    border: solid white 2px;
                }

            .uname span {
        font-family: cursive;
        color: black;
    }

            .avt-area .avt {
                max-width: 100%;
                max-height: 100%;
                vertical-align: top;
                border-radius: 50%;
                object-fit: contain;
            }

            .logout {
                position: absolute;
                right: 70px;
                top: 13px;
            }

                .logout a {
        color: white;
    }

            .login-btn {
                display: flex;
                align-items: center;
                justify-content: center;
                background-color: whitesmoke;
                border-radius: 40px;
                width: 75px;
                height: 35px;
                transition: all 0.3s;
                color: black;
            }

                .login-btn:hover {
                    background-color: black;
                    color: white;
                }
        </style>

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
